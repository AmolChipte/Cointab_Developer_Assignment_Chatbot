datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Chat {
  id        Int       @id @default(autoincrement())
  title     String
  createdAt DateTime  @default(now())
  messages  Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  sender    String
  text      String
  chatId    Int
  chat      Chat     @relation(fields: [chatId], references: [id])
  createdAt DateTime @default(now())
}
